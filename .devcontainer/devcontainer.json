{
  "name": "TF GPU Dev Container",
  "image": "tensorflow/tensorflow:2.16.1-gpu",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.tensorboard",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "workspaceFolder": "/app",
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind"
  ],
  "runArgs": ["--gpus", "all"],
  "containerEnv": {
    "MODEL_DIR": "/app/models",
    "DATA_DIR": "/app/data",
    "PYTHONUNBUFFERED": "1"
  },
  "postCreateCommand": "python -m pip install -U pip && pip install -r requirements/dev.txt"
}
